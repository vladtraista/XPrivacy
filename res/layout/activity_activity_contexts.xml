<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="biz.bokhorst.xprivacy.ActivityContexts" >

    <Button
        android:id="@+id/addContextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="19dp"
        android:text="Add Context" />

    <EditText
        android:id="@+id/contextNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/addContextButton"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/addContextButton"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <ListView
        android:id="@+id/contextsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addContextButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp" >
    </ListView>

</RelativeLayout>
